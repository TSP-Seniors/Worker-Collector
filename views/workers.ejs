<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="css/style.css" />
    <title><%= title %></title>
  </head>
  <body>
    <!-- <h1>Hola</h1> -->
    <div class="container">
      <div class="buscador">
        <input type="text" id="nombre" placeholder="Buscar Nombre" />
        <button type="submit">buscar</button>
      </div>
      <div class="trabajadores">
        <ol>
          <% ArrWorkers.forEach((worker, index) => { %>
          <li class="trabajadores-listado">
            <div class="bloque-1">
              <p>Nombre: <%= worker.contact_name %></p>
              <p>Empresa: DISNEY</p>
            </div>
            <div class="bloque-2">
              <p>Certificación: <%= worker.certification_name %></p>
              <p>Fecha de Certificación: <%= worker.certification_date.toLocaleDateString() %></p>
              <p>Fecha de Expiración: <span id="exp"><%= worker.expiration_date.toLocaleDateString() %></span></p>
            </div>
            <div id="time_<%= index %>" class="bloque-3"></div>
            <!-- btn-amarillo btn-rojo btn-verde -->
          </li>
          <% }); %>
        </ol>
      </div>
    </div>
    <script type="module" src="scripts/workers.js"></script>
  </body>
</html>
